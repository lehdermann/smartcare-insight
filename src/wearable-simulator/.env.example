# Patient and Device Settings
PATIENT_ID=patient-1
DEVICE_ID=wearable-1
CONDITION=hypertension  # Options: hypertension, diabetes, copd, or empty for healthy

# Simulation Settings
SAMPLE_RATE=4                # Samples per minute
NOISE_LEVEL=0.02            # 2% noise
USE_CIRCADIAN_RHYTHMS=true  # Enable 24-hour patterns
SIMULATE_MEALS=true         # Simulate meal effects on glucose
SIMULATE_SLEEP=true         # Simulate sleep/wake cycles
MEAL_TIMES=7,12,19          # Breakfast, lunch, dinner (24h format)
SLEEP_START_HOUR=23         # Sleep time (24h format)
SLEEP_DURATION_HOURS=8      # Sleep duration in hours

# MQTT Settings
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=wearables/data
MQTT_QOS=1
MQTT_RETAIN=false

# Advanced Settings
# SEED=42  # Uncomment for reproducible results
